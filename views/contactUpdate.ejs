<%- contentFor('Content') %>
<h1>Update contact form</h1>
<% if(typeof errors != 'undefined') { %>
  <div class="alert alert-danger" role="alert">
    <ul>
      <% errors.forEach(error => { %> 
        <li>
          <%= error.msg %> 
        </li>
      <% }) %> 
    </ul>
  </div>
<% } %> 
<form action="/update/<%= cont.name %>" method="post">
  <input type="hidden" name="prevName" value="<%= (cont.prevName) ? cont.prevName : cont.name %> " />
  <div class="form-group">
    <label for="exampleInputEmail1">Name</label>
    <input name="name" class="form-control" value="<%= cont.name %>" required />
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Email</label>
    <input name="email" class="form-control" value="<%= cont.email %>" />
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Mobile Phone</label>
    <input name="phone" class="form-control" value="<%= cont.phone %>" required />
  </div>
  <button type="submit" class="btn btn-primary mb-2">Update Contact Data</button>
</form>