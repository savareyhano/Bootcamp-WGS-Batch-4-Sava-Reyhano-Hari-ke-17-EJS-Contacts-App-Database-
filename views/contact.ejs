<%- contentFor('Content') %>
    <h1>Contact Me</h1>
    <a class="btn btn-primary" href="/create" role="button">Add Contact</a>
    <% if (cont.length>0) { %>
        <table class="table">
            <tr>
                <th>No</th>
                <th>Name</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
            <% cont.forEach((element, index)=> { %>
                <tr>
                    <td><%= index+1%> </td>
                    <td><%= element.name %></td>
                    <td><%= element.email %></td>
                    <td><span class="badge rounded-pill text-bg-success"><a href="/contact/<%= element.name %>" class="text-decoration-none" style="color: white;">Detail</a></span></td>
                </tr>
            <% }) %>
    <% } else { %>
            <p>Data tidak ditemukan</p>
    <% } %>
        </table>